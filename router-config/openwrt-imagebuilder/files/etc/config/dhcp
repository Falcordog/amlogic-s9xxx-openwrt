
config dnsmasq
	option leasefile '/tmp/dhcp.leases'
	option rebind_protection '0'
	option local '/lan/'
	option domain 'lan'
	option ednspacket_max '1024'
	option dnsforwardmax '1024'
	option cachesize '1000'
	option expandhosts '1'
	option logqueries '1'
	option port '1745'
	option localise_queries '1'
	option boguspriv '0'
	option localservice '0'
	option readethers '1'
	option noresolv '1'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option limit '150'
	option leasetime '12h'
	option dhcpv4 'server'
	option ignore '1'
	option dynamicdhcp '0'
	list dhcp_option 'option:dns-server,'
	list dhcp_option 'option:dns-server,'
	list ra_flags 'none'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

config dhcp 'libernet'
	option interface 'libernet'
	option ignore '1'
	list ra_flags 'none'
