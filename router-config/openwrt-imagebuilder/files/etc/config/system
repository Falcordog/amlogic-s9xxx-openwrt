
config system
	option ttylogin '0'
	option log_size '256'
	option urandom_seed '0'
	option hostname 'HK1-WRT'
	option zonename 'Australia/Melbourne'
	option timezone 'AEST-10AEDT,M10.1.0,M4.1.0/3'
	option log_proto 'udp'
	option conloglevel '8'
	option cronloglevel '5'

config timeserver 'ntp'
	option use_dhcp '0'
	list server '0.au.pool.ntp.org'
	list server '1.au.pool.ntp.org'
	list server '2.au.pool.ntp.org'
	list server '3.au.pool.ntp.org'